  "project": {
    "type": "nextjs",
    "framework": "next.js",
    "language": "typescript",
    "database": "prisma",
    "authentication": "next-auth",
    "deployment": "vercel",
    "features": [
      "booking-system",
      "whatsapp-widget",
      "mobile-responsive",
      "security-branding",
      "admin-panel"
    ]
  },
  "claude_context": {
    "primary_brand_color": "yellow-500",
    "phone_number": "07407655203",
    "business_type": "security_taxi_service",
