      "app/page.tsx - Main landing page",
      "app/components/ui/WhatsAppWidget.tsx - WhatsApp integration",
      "app/components/ui/Header.tsx - Navigation header",
      "app/layout.tsx - App layout and metadata",
      "START-WEBSITE.bat - Development server startup"
    ]
  },
  "sync_endpoints": {
    "cursor_bridge": "http://localhost:3001/cursor-sync",
    "desktop_claude": "mcp://desktop-commander",
    "github_repo": "https://github.com/your-username/gq-cars-ltd",
