{
  "name": "AI Development Environment",
  "description": "Configuration for Cursor IDE with Claude, n8n, and ChatGPT integration",
  "version": "1.0.0",
  "cursor": {
    "ai": {
      "models": {
        "primary": "claude-3-sonnet-20240229",
        "fallback": "gpt-4",
        "coding": "claude-3-sonnet-20240229"
      },
      "providers": {
        "anthropic": {
          "enabled": true,
          "model": "claude-3-sonnet-20240229",
          "apiKey": "${ANTHROPIC_API_KEY}",
          "maxTokens": 4000
        },
        "openai": {
          "enabled": true,
          "model": "gpt-4",
          "apiKey": "${OPENAI_API_KEY}",
          "maxTokens": 4000
        }
      },
      "features": {
        "codeCompletion": true,
        "codeExplanation": true,
        "codeGeneration": true,
        "debugging": true,
        "refactoring": true,
        "documentation": true
      }
    },
    "integrations": {
      "n8n": {
        "enabled": true,
        "url": "http://localhost:5678",
        "webhookUrl": "http://localhost:5678/webhook",
        "apiEndpoint": "http://localhost:5678/rest"
      },
      "docker": {
        "enabled": true,
        "composeFile": "./docker-compose.yml"
      }
    },
    "workflows": {
      "onSave": {
        "enabled": false,
        "actions": [
          "lint",
          "format",
          "test"
        ]
      },
      "onCommit": {
        "enabled": false,
        "actions": [
          "aiReview",
          "generateDocs"
        ]
      }
    }
  },
  "extensions": {
    "recommended": [
      "ms-python.python",
      "ms-vscode.vscode-typescript-next",
      "bradlc.vscode-tailwindcss",
      "esbenp.prettier-vscode",
      "ms-vscode.vscode-json",
      "redhat.vscode-yaml",
      "ms-vscode.docker"
    ]
  },
  "settings": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.organizeImports": true
    },
    "files.associations": {
      "*.n8n": "json",
      "docker-compose*.yml": "yaml"
    }
  }
}
