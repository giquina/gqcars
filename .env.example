# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Stripe Configuration (Required for Payment Processing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CONNECT_CLIENT_ID=ca_...

# Database Configuration (Add your database provider)
DATABASE_URL=postgresql://username:password@localhost:5432/gqcars
DATABASE_ENCRYPT_KEY=your_32_character_encryption_key

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Email Service (for invoices and notifications)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your_api_key_here
EMAIL_FROM=noreply@gqcars.com

# SMS Service (for notifications)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage (for invoices and receipts)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-2
AWS_S3_BUCKET=gqcars-documents

# Google Maps API (for distance calculations)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=your_sentry_dsn_here

# Company Details (for invoices)
COMPANY_NAME="GQ Cars LTD"
COMPANY_REGISTRATION="GQ123456789"
COMPANY_VAT_NUMBER="GB123456789"
COMPANY_ADDRESS_LINE1="123 Security Street"
COMPANY_ADDRESS_LINE2="Business District"
COMPANY_CITY="London"
COMPANY_POSTCODE="SW1A 1AA"
COMPANY_COUNTRY="United Kingdom"
COMPANY_PHONE="+44 20 7123 4567"
COMPANY_EMAIL="billing@gqcars.co.uk"
COMPANY_WEBSITE="www.gqcars.co.uk"

# Accounting Integration (Optional)
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret

# Payment Retry Configuration
PAYMENT_RETRY_MAX_ATTEMPTS=3
PAYMENT_RETRY_INTERVALS="1,3,7"

# Fraud Detection Thresholds
FRAUD_LOW_RISK_THRESHOLD=30
FRAUD_MEDIUM_RISK_THRESHOLD=60
FRAUD_HIGH_RISK_THRESHOLD=85

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Debug & Development
DEBUG_PAYMENTS=false
LOG_LEVEL=info