# GQ Cars LTD - Corporate System Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/gqcars_corporate?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"

# Email Service Configuration (for user invitations)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="GQ Cars LTD <noreply@gqcars.com>"

# Corporate System Configuration
COMPANY_NAME="GQ Cars LTD"
COMPANY_DOMAIN="gqcars.com"
COMPANY_PHONE="07407 655 203"
COMPANY_EMAIL="gqcars@giquinaholdings.com"

# VAT Configuration (UK)
DEFAULT_VAT_RATE="0.20"
COMPANY_VAT_NUMBER="GB123456789"

# Security Configuration
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="24h"
PASSWORD_MIN_LENGTH="8"

# File Storage (for invoices and reports)
STORAGE_PROVIDER="local" # or "s3", "cloudinary"
STORAGE_PATH="./storage"

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-west-2"
AWS_S3_BUCKET="gqcars-corporate-documents"

# Compliance and Audit
AUDIT_LOG_RETENTION_DAYS="2555" # 7 years default
GDPR_DATA_RETENTION_MONTHS="84" # 7 years
ENABLE_SOX_COMPLIANCE="false"
ENABLE_GDPR_COMPLIANCE="true"

# Invoice Configuration
INVOICE_NUMBER_PREFIX="INV"
INVOICE_DUE_DAYS="30"
INVOICE_CURRENCY="GBP"

# Budget and Approval Defaults
DEFAULT_APPROVAL_THRESHOLD="1000"
DEFAULT_MAX_BOOKING_AMOUNT="10000"
DEFAULT_MONTHLY_BUDGET_LIMIT="50000"

# Executive Protection Configuration
THREAT_ASSESSMENT_API_KEY="your-threat-assessment-api-key"
SECURITY_PLANNING_ENABLED="true"

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_SMS_NOTIFICATIONS="false"
ENABLE_PUSH_NOTIFICATIONS="true"

# Integration API Keys
EXPENSE_SYSTEM_API_KEY="your-expense-system-api-key"
ACCOUNTING_SYSTEM_API_KEY="your-accounting-system-api-key"

# Development Configuration
NODE_ENV="development"
DEBUG_MODE="true"
LOG_LEVEL="info"

# Production Configuration (uncomment for production)
# NODE_ENV="production"
# DEBUG_MODE="false"
# LOG_LEVEL="error"
# ENABLE_RATE_LIMITING="true"
# RATE_LIMIT_REQUESTS_PER_MINUTE="100"