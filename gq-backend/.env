# GQ Security Services Backend Configuration - Development

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gq_security_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration (Local Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=gq_security_super_secure_jwt_secret_key_development_only
JWT_REFRESH_SECRET=gq_security_super_secure_refresh_token_key_development_only
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Development - use MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=dev@gqsecurity.local
FROM_NAME=GQ Security Services (Dev)

# Payment Integration (Test keys)
STRIPE_SECRET_KEY=sk_test_development_key_here
STRIPE_WEBHOOK_SECRET=whsec_development_webhook_secret

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Client Configuration
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Emergency Services Configuration
EMERGENCY_PHONE=+44123456789
EMERGENCY_EMAIL=emergency@gqsecurity.local

# Business Configuration
COMPANY_NAME=GQ Security Services
COMPANY_PHONE=+44123456789
COMPANY_EMAIL=info@gqsecurity.local
COMPANY_ADDRESS=London, UK