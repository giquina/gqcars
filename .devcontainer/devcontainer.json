{
  "name": "GQ Cars LTD - Next.js Development Environment",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "ms-vscode.vscode-json",
        "Prisma.prisma",
        "ms-playwright.playwright",
        "ms-vscode.vscode-eslint"
      ],
      "settings": {
        "typescript.preferences.quoteStyle": "double",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "emmet.includeLanguages": {
          "typescript": "html",
          "typescriptreact": "html"
        }
      }
    }
  },
  "forwardPorts": [3000, 3001, 5432],
  "portsAttributes": {
    "3000": {
      "label": "GQ Cars Website",
      "onAutoForward": "openBrowser"
    },
    "3001": {
      "label": "Storybook",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "bash setup-codespaces.sh",
  "postStartCommand": "cd apps/web && npm install",
  "remoteUser": "codespace",
  "workspaceFolder": "/workspaces/gqcars",
  "mounts": [
    "source=gqcars-node-modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=gqcars-web-node-modules,target=${containerWorkspaceFolder}/apps/web/node_modules,type=volume"
  ]
}